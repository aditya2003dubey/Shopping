<% layout("/layout/boilerplate") -%>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: Arial, sans-serif;
    line-height: 1.6;
}

.about-section {
    padding: 2rem;
    background: #f4f4f4;
    text-align: center;
}

.about-section h1 {
    margin-bottom: 1rem;
    color: #333;
}

.about-section p {
    margin: 1rem 0;
    color: #555;
}

.team {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    padding: 2rem;
}

.team-member {
    background: #fff;
    border: 1px solid #ddd;
    border-radius: 10px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    text-align: center;
    padding: 1rem;
}

.team-member img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-bottom: 1px solid #ddd;
}

.team-member h3 {
    margin: 1rem 0 0.5rem;
    color: #333;
}

.team-member p {
    color: #777;
}

@media (max-width: 768px) {
    .about-section {
        padding: 1rem;
    }

    .team {
        grid-template-columns: 1fr;
    }
}
</style>

